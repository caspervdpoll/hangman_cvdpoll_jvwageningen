<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue"
    tools:context="com.example.twisted_hangman.singleplayerActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="_ _ _ G _ _ M M _ _ _ _"
        android:textColor="@color/blue"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/hangman"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/word"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:maxHeight="260dp"
        android:src="@drawable/step0" />
    
	<LinearLayout android:id="@+id/AI" android:layout_height="20dp" android:layout_width="match_parent" 
	    			android:layout_below="@id/hangman" android:layout_marginTop="15dp" >
	    <Button android:id="@+id/A" android:text="A" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="fill_parent" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="10dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/B" android:text="B" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" />
	    <Button android:id="@+id/C" android:text="C" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/D" android:text="D" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/E" android:text="E" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/F" android:text="F" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/G" android:text="G" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/H" android:text="H" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/I" android:text="I" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="10dp"/>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/JR" android:layout_height="20dp" android:layout_width="match_parent" 
	    			android:layout_below="@id/AI" android:layout_marginTop="10dp" >
	    <Button android:id="@+id/J" android:text="J" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="fill_parent" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="10dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/K" android:text="K" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" />
	    <Button android:id="@+id/L" android:text="L" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/M" android:text="M" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/N" android:text="N" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/O" android:text="O" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/P" android:text="P" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/Q" android:text="Q" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/R" android:text="R" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="10dp"/>
	</LinearLayout>
	
	<LinearLayout android:id="@+id/SZ" android:layout_height="20dp" android:layout_width="match_parent" 
	    			android:layout_below="@id/JR" android:layout_marginTop="10dp" >
	    <Button android:id="@+id/S" android:text="S" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="fill_parent" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="10dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/T" android:text="T" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" />
	    <Button android:id="@+id/U" android:text="U" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/V" android:text="V" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/W" android:text="W" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/X" android:text="X" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/Y" android:text="Y" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
	    <Button android:id="@+id/Z" android:text="Z" android:layout_width="20dp" 
	        	android:layout_weight="1" android:layout_height="wrap_content" android:textColor="@color/white"
	        	android:background="@drawable/rounded" android:layout_marginLeft="4dp" android:layout_marginRight="45dp"/>
	</LinearLayout>

	<EditText
	    android:id="@+id/guess"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/SZ"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:hint="Guess the word: "
	    android:ems="10" >

	    <requestFocus />
	</EditText>
	
</RelativeLayout>
